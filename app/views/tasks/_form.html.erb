<%=semantic_form_for([@task_group,@task]) do |f|%>
    <%= f.inputs do %>
      <%= f.input :title %>
      <%= f.input :deadline %>
      <%= f.input :objective %>
      <%= f.input :person, :as => :select, :collection => Person.all.map{|person| [person.name, person.id] }%>
    <% end %>
    <%=f.buttons%>
<%end%>